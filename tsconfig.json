{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedParameters": true,
    "rootDir": "./src/",
    "strict": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "./dist/",
    "skipLibCheck": true,
    "target": "es2019",
    "esModuleInterop": true
  },
  "include": [
    "src/"
  ]
} 